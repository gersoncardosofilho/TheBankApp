<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/fundosaldo">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_saldo_saudacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saudacao"
            android:textSize="26sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="51dp"
            android:layout_marginLeft="57dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/textview_saldo_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:text="Gerson Cardoso Filho"
            android:textStyle="bold"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_saldo_saudacao"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView_saldo_saudacao" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saldo_disponivel"
            android:layout_marginTop="7dp" android:textSize="26sp"
            app:layout_constraintTop_toBottomOf="@+id/textview_saldo_nome"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/textview_saldo_nome" />

        <TextView
            android:id="@+id/textview_saldo_valor_saldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0,00" android:textSize="40sp" android:textStyle="italic"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView4"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />


    </android.support.constraint.ConstraintLayout>
</LinearLayout>