<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_saldo_saudacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saudacao"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.023" />

        <TextView
            android:id="@+id/textview_saldo_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_saldo_saudacao"
            android:layout_marginRight="310dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.275" android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saldo_disponivel"
            android:layout_marginTop="37dp"
            app:layout_constraintTop_toBottomOf="@+id/textview_saldo_nome"
            app:layout_constraintRight_toLeftOf="@+id/textview_saldo_valor_saldo"
            android:layout_marginRight="208dp" />

        <TextView
            android:id="@+id/textview_saldo_valor_saldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0,00"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toTopOf="@+id/textView4"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />


    </android.support.constraint.ConstraintLayout>
</LinearLayout>