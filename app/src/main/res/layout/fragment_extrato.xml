<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundoextrato"
    tools:context="com.desafio.gerson.thebankapp.fragment.FragmentExtrato">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:id="@+id/constraintLayout2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-2dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="25dp"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
            android:layout_marginStart="25dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Histórico"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toRightOf="@+id/textView7"
            android:layout_marginLeft="8dp"
            app:layout_constraintRight_toLeftOf="@+id/textView9"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.545"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor(R$)"
            android:textStyle="bold" android:textSize="12dp" android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout2"
            android:layout_marginEnd="16dp" />


    </android.support.constraint.ConstraintLayout>

    <ListView android:paddingTop="20dp"
        android:id="@+id/list_transacoes"
        android:layout_width="371dp"
        android:layout_height="453dp"
        android:layout_margin="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="393dp"
        android:layout_height="54dp" android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        android:id="@+id/constraintLayout"
        android:layout_marginBottom="-1dp">

        <TextView
            android:id="@+id/textview_extrato_saldo_disponivel"
            android:layout_width="139dp"
            android:layout_height="21dp"
            android:layout_gravity="bottom"
            android:textSize="8pt"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Saldo disponível:"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/textview_extrato_saldoatual"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/textview_extrato_saldoatual"
            android:layout_width="108dp"
            android:layout_height="21dp"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:text="0.00"
            android:gravity="right"
            android:textSize="8pt" android:textStyle="bold"
            android:layout_marginEnd="20dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textview_extrato_saldo_disponivel"
            android:layout_marginRight="40dp"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>










</android.support.constraint.ConstraintLayout>





